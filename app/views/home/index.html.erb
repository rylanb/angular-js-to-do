<div id="todos">
  <h1>Your To Dos</h1>

  <form id="todos_form" action="">
    <input type="text" placeholder="Your To-Do" />
  </form>

  <ul id="todo_list">
    <li ng-repeat="todo in todos">
      <input type="checkbox" name="check_{{todo.index}}" id="check_{{todo.index}}" />
      <label for="check_{{todo.index}}">{{todo.title}}</label>
      <a href="#delete" method="delete">delete</a>
    </li>
  </ul>

  <p id="number_todos">{{todos.length}} To Dos</p>


</div>
